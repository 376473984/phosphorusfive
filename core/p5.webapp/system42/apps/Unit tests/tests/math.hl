/*
 * Contains unit tests for testing math Active Events
 */


/*
 * Tests that [+] behaves
 */
plus
  +:int:5
    _:2
  if:x:/-?value
    !=:int:7
    throw:@"Assert error, expected 7!"


/*
 * Tests that [+] behaves when given expressions
 */
plus-expressions
  _no1:int:5
  _no2:int:2
  +:x:/../*/_no1?value
    _:x:/../*/_no2?value
  if:x:/-?value
    !=:int:7
    throw:@"Assert error, expected 7!"


/*
 * Tests that [+] behaves when given multiple children
 */
plus-multiple-mixed-types
  _no1:int:5
  _no2:int:1
  +:x:/../*/_no1?value
    _:x:/../*/_no2?value
    _:1
  if:x:/-?value
    !=:int:7
    throw:@"Assert error, expected 7!"


/*
 * Tests that [-] behaves
 */
minus
  -:int:7
    _:2
  if:x:/-?value
    !=:int:5
    throw:@"Assert error, expected 5!"


/*
 * Tests that [-] behaves
 */
minus-multiple-values
  -:int:7
    _:1
    _:1
  if:x:/-?value
    !=:int:5
    throw:@"Assert error, expected 5!"


/*
 * Tests that mixed nested operators behaves
 */
mixed-nested
  _no1:10
  +:int:15
    _:1
    -:x:/../*/_no1?value.int
      _:5
      *:int:2
        _:2
  if:x:/-?value
    !=:int:17
    throw:@"Assert error, expected 17!"


/*
 * Tests that [%]
 */
mixed-nested
  %:int:19
    _:5
  if:x:/-?value
    !=:int:4
    throw:@"Assert error, expected 4!"
