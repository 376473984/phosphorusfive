
/*
 * Declaration of our "app loader page"
 */
p5.page:/app-loader
  type:lambda
  name:App loader
  template:/system42/apps/cms/templates/default.hl
  role:root
  lambda:@"
/*
 * Loads up the specified app according to the given HTTP parameter.
 */
get-http-param:app
split:x:/-/0?value
  =:/
sys42.execute-lisp-file:x:/../*/get-http-param/0?value
set-widget-property:header
  innerValue:x:/./-2/0/-/-?name
set-title:x:/-3/0/-/-?name
"
