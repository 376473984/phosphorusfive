/*
 * Creating main CSV file editor widget
 */
create-widget:main-csv-editor
  parent:content
  widgets

    /*
     * Wraps the import/close button
     */
    div:csv-import-button-wrapper
      class:col-xs-12 text-right prepend-bottom
