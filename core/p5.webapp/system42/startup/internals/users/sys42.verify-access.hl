
/*
 * Checks to see if the user has access to the given object
 */

create-protected-event:sys42.verify-access
  set:x:/..?value
    src:bool:true
  if:x:/../*/_arg
    whoami
    if:x:/-/*/role?value
      not-equals:root
      and:x:/./-/*/role?value
        not-equals:x:/../*/_arg?value
      set:x:/..?value
        src:bool:false


